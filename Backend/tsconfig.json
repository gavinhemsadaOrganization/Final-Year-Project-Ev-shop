{
  "compilerOptions": {
    "target": "ES2020", // JavaScript version
    "module": "CommonJS", // older module system
    "rootDir": "./src", // source files
    "outDir": "./dist", // compiled output
    "strict": true, // enable all strict checks
    "esModuleInterop": true, // allow import from CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // skip type checking for dependencies
    "sourceMap": true, // optional: generate source maps
    "declaration": true, // optional: generate .d.ts files
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "express-session", "jest"],
    "typeRoots": ["src/shared/types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "_test_/**/**/*.test.ts"], // include all TS files in src
  "exclude": ["node_modules", "dist"]
}
